<p id="notice"><%= notice %></p>

<%= link_to 'New Contact', new_contact_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name: </th>
      <th>Lastname: </th>
      <th>Phone: </th>
      <th >Address: </th>
      <th>Gender:</th>
      <th>Age:</th>
      <th colspan="3">Update</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td> <%= contact.name %></td>
        <td> <%= contact.last_name %></td>
        <td> <a href="tel:+1<%= contact.phone %>">+1<%= contact.phone %></a></td>
        <td> <%= contact.address %></td>
        <td> <%= contact.gender %></td>
        <td> <%= contact.age %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td >
          <%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
